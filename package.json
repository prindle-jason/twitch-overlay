{
  "name": "twitch-overlay-server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/server/server.js",
    "dev": "npm run build && npm start",
    "build": "vite build && tsc -p tsconfig.server.json",
    "watch:client": "vite build --watch",
    "watch:server": "tsc -p tsconfig.server.json --watch",
    "dev:watch": "npm run build && concurrently \"npm run start\" \"npm run watch:client\" \"npm run watch:server\""
  },
  "dependencies": {
    "express": "^5.2.1",
    "gifuct-js": "^2.1.2",
    "libwebp-wasm": "^0.1.6",
    "node-fetch": "^3.3.2",
    "nouislider": "^15.8.1",
    "terser": "^5.44.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
